  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "debug unit test",
      "runtimeExecutable": "pnpm",
      "windows": {
        "runtimeExecutable": "pnpm.cmd"
      },
      "runtimeArgs": ["pnpm", "jest"],
      "args": [
        "--runInBand",
        "--watchAll=false",
        "--testNamePattern",
        "vue => usePagination",

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"],
      "#/*": ["test/*"],
      "root/*": ["../../internal/*"]
    }
  },
  "include": ["src/**/*.ts", "typings/*.d.ts", "test/**/*.ts", "test/**/*.tsx", "../../*.d.ts"],
  "exclude": ["node_modules"]
}
